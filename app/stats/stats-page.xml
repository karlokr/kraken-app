<Page id="main" loaded="pageLoaded" xmlns="http://www.nativescript.org/tns.xsd"
    backgroundColor="#ebf1f2" class="page">
    <ActionBar class="action-bar" height="40" flat="true" title="Weight" class="action-bar">
        <NavigationButton ></NavigationButton>
    </ActionBar>
    <!-- dialog -->
        <StackLayout class="wrapper" alignItems="flex-end" width="100%">
            <StackLayout class="dialog">
                <FlexboxLayout class="header" width="100%" flexDirection="row"
                    tap="{{closeDialog}}" justifyContent="space-between"
                    alignItems="center" style="background:#3E646C; margin-bottom:15;">
                    <FlexboxLayout flexDirection="row-reverse" alignItems="center">
                        <Label class="subheading" text="Week #23" style="padding:0; margin-top:2" />
                        <Label class="heading dark" text="Heartbeat" style="margin:0" />
                    </FlexboxLayout>
                </FlexboxLayout>


                <GridLayout rows="auto, *" xmlns:chart="nativescript-ui-chart"
                    class="modal_chart">

                    <chart:RadCartesianChart row="1" selectionMode="None">
                        <chart:RadCartesianChart.horizontalAxis>
                            <chart:DateTimeCategoricalAxis lineHidden="true"
                                labelTextColor="#ffffff" ticksHidden="true"
                                labelMargin="10" android:labelMargin="20" />
                        </chart:RadCartesianChart.horizontalAxis>
                        <chart:RadCartesianChart.verticalAxis>
                            <chart:LinearAxis lineHidden="true" labelFormat="%.0f"
                                labelTextColor="#ffffff" ticksHidden="true"
                                labelMargin="10" android:labelMargin="20" minimum="180" maximum="210" majorStep="10" />
                        </chart:RadCartesianChart.verticalAxis>
                        <chart:RadCartesianChart.series>
                            <chart:LineSeries seriesName="Weight"
                                categoryProperty="day" items="{{ calories_data }}"
                                stackMode="None" valueProperty="count" />
                        </chart:RadCartesianChart.series>
                        <chart:RadCartesianChart.grid>
                            <chart:RadCartesianChartGrid
                                horizontalLinesVisible="true"
                                verticalLinesVisible="false"
                                verticalStripLinesVisible="false"
                                horizontalStripLinesVisible="false"
                                horizontalStrokeColor="#A4D1DA" />
                        </chart:RadCartesianChart.grid>
                        <chart:RadCartesianChart.palettes>
                            <chart:Palette seriesName="Weight">
                                <chart:Palette.entries>
                                    <chart:PaletteEntry 
                                        strokeColor="rgb(164, 209, 218)" strokeWidth="3"
                                        android:strokeWidth="6" />
                                    <chart:PaletteEntry 
                                        strokeColor="rgb(164, 209, 218)" strokeWidth="3"
                                        android:strokeWidth="6" />
                                </chart:Palette.entries>
                            </chart:Palette>
                        </chart:RadCartesianChart.palettes>
                    </chart:RadCartesianChart>
                </GridLayout>
            </StackLayout>
            
        </StackLayout>

		


</Page>