<Page xmlns="http://www.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <ActionBar class="action-bar" flat="true" title="{{ url_title }}">
        <NavigationButton text="" icon="~/images/next.png" tap="onNavBtnTap"/>
    </ActionBar>

    <StackLayout>
        <StackLayout>
            <GridLayout rows="*" columns="*">
                <WebView row="0" col="0" loaded="onFirstWebViewLoaded" src="{{ url }}"/>
            </GridLayout>
        </StackLayout>
    </StackLayout>
</Page>