<Page class="page" navigatingTo="onNavigatingTo" 
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar class="action-bar" title="Kraken Training">
        <ActionItem android.position="actionBar" ios.position="right" tap=" {{ onProfileButtonTap }}">
            <Label text="&#xf2bd;" class="fa action-button"></Label>
        </ActionItem>
    </ActionBar>

    <GridLayout rows="auto, *, auto, auto">
        <StackLayout row="0" class="m-b-25">
            <Label class="t-30 text-center title" text="Welcome"></Label>
            <Label class="t-18 text-center font-weight-bold" text="{{ loggedUser }}"></Label>
            <StackLayout class="hr"></StackLayout>
        </StackLayout>
        <GridLayout row="1" rows="auto, auto, auto, auto" columns="*, *" class="menu-container">
            <StackLayout row="0" col="0" data-name="https://krakentraining.com/" class="menu-item">
                <Button text="&#xf015;" class="fa menu-icon" tap="{{ onMenuButtonTap }}"></Button>
                <Label text="Home" class="text-center" tap="{{ onMenuButtonTap }}"></Label>
            </StackLayout>
            <StackLayout row="0" col="1" data-name="https://krakentraining.com/blog" class="menu-item">
                <Button text="&#xf1ea;" class="fa menu-icon" tap="{{ onMenuButtonTap }}"></Button>
                <Label text="Blog" class="text-center" tap="{{ onMenuButtonTap }}"></Label>
            </StackLayout>
            <StackLayout row="1" col="0" data-name="stats" class="menu-item">
                <Button text="&#xf201;" class="fa menu-icon" tap="{{ onStatsTap }}"></Button>
                <Label text="Stats" class="text-center" tap="{{ onStatsTap }}"></Label>
            </StackLayout>
            <StackLayout row="1" col="1" data-name="https://learn.krakentransformations.com" class="menu-item">
                <Button text="&#xf19c;" class="fa menu-icon" tap="{{ onMenuButtonTap }}"></Button>
                <Label text="Courses" class="text-center" tap="{{ onMenuButtonTap }}"></Label>
            </StackLayout>
            <StackLayout row="2" col="0" data-name="https://clients.mindbodyonline.com/LoginLaunch?studioid=466195" class="menu-item">
                <Button text="&#xf21e;" class="fa menu-icon" tap="{{ onMenuButtonTap }}"></Button>
                <Label text="MindBody Login" class="text-center" tap="{{ onMenuButtonTap }}"></Label>
            </StackLayout>
            <StackLayout row="2" col="1" data-name="photo-gallery" class="menu-item">
                <Button text="&#xf030;" class="fa menu-icon" tap="{{ onPhotosTap }}"></Button>
                <Label text="Progress Pics" class="text-center" tap="{{ onPhotosTap }}"></Label>
            </StackLayout>
            
        </GridLayout>
        <StackLayout row="2" data-name="settings" class="menu-item">
                <Button text="&#xf013;" class="fa menu-icon" tap="{{ onMenuButtonTap }}"></Button>
                <Label text="Settings" class="text-center" tap="{{ onMenuButtonTap }}"></Label>
            </StackLayout>
    </GridLayout>

</Page>